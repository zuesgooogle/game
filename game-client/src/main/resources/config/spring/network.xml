<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
    xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd     
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd     
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <bean id="messageMapping" class="com.s4game.core.message.ProtobufMessageMapping" init-method="init"/>

	<bean id="clientHandler" class="com.s4game.client.net.ClientHandler" />
	<bean id="clientInitializer" class="com.s4game.core.net.NetInitializer">
		<property name="handlers">
			<list>
				<ref bean="clientHandler" />
			</list>
		</property>
		<property name="messageMapping" ref="messageMapping"/>
	</bean>

	<bean class="com.s4game.core.net.ClientListener" init-method="start">
        <property name="host" value="127.0.0.1" />
        <property name="port" value="11001" />
        
        <property name="initializer" ref="clientInitializer" />
    </bean>

</beans>